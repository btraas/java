package ca.bcit.comp2526.a2b;

import java.awt.Color;
import java.awt.Image;
import java.io.File;
import java.io.IOException;

import javax.imageio.ImageIO;

/**
 * A Terrain Type for Cells to have.
 * 
 * @author Brayden Traas
 * @version 2016-11-19
 */

public enum Terrain {
	
    DEFAULT( Terrain.DIRT ), // Default / Dirt 
    DIRT( 	"dirt", 	new Color(163, 117, 73), 	getImage("dirt.png") ),		  // Dirt
    WATER( 	"water", 	new Color(0, 85, 255), 		getImage("water.png")); 	  // Water
    		

    public final String identifier; // The String that represents this Enum.
    public final Color  color;
    public final Image  image;
    
    
    private Terrain(Terrain in) {
    	this(in.identifier, in.color, in.image);
    }
    
    // Providing a constructor for this Enum. Terrain.Water runs this constructor
    // (Terrain('water')) which sets the character identifier.
    private Terrain(String identifier, Color color, Image image) {
        this.identifier = identifier;
        this.color = color;
        this.image = image;
    }


    /**
     * Get the Enum from a string identifier.
     * 
     * @param input String to get the Enum for
     * @return Enum pertaining to string identifier
     */
    public static Terrain fromChar(final String input) {
        for (Terrain tempTable : Terrain.values()) {
            if (input.equalsIgnoreCase(tempTable.identifier)) {
                return tempTable;
            }
        }
        return null;
    }

    
    private static Image getImage(final String filename) {
		try {
			return ImageIO.read(new File(filename));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
			return null;
		}
	}
    

}
